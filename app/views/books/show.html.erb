<head>
  <title>Bookers2</title>
  <script src="https://kit.fontawesome.com/a334d13857.js" crossorigin="anonymous"></script>
</head>

<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'books/list', book: @book_new %>

      <div class="col-md-8 offset-md-1">
        <h2>Bookã€€detail</h2>
        <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %>
                <% end %></br>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
              <td>
                <%= link_to @book.title, book_path(@book.id) %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to 'Edit', edit_book_path(@book), class:'btn btn-sm btn-success' %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, class:'btn btn-sm btn-danger' %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>