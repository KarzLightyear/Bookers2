<head>
  <title>Bookers2</title>
  <script src="https://kit.fontawesome.com/a334d13857.js" crossorigin="anonymous"></script>
</head>

<main>
  <div class="container px-5 px-sm-0">
    <% if @book_new.errors.any? %>
      <p style="color: red;"><%= @book_new.errors.count %>errors prohibited this obj from being saved:</br>
      <% @book_new.errors.full_messages.each do |message| %>
        <%= message %>
        </br>
      <% end %>
    <% end %>
    <div class="row">
      <%= render 'books/list', book: @book_new %>
            
      <div class="col-md-8 offset-md-1">
        <h2>Book</h2>
        <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td>
                <% if book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(book), method: :delete do %>
                      ♥<%= book.favorites.count %>
                    <% end %>
                  </p>
                  <% else %>
                  <p>
                    <%= link_to book_favorites_path(book), method: :post do %>
                      ♡<%= book.favorites.count %>
                    <% end %>
                  </p>
                <% end %>
              </td>
              <td>
                <p><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>  
  </div>  
</main>


