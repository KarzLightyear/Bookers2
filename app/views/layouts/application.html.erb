<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>  
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'Home',  "/" %>
              </li>
              <li class="nav-item ">
                <%= link_to "Books", books_path %>
              </li>
              <li class="nav-item">
                <%= link_to 'Users', user_path(current_user.id) %>
              </li>
              <li class="nav-item">
                <%= link_to "logout", destroy_user_session_path, method: :delete %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Home', "/" %>
              </li>
              <li class="nav-item">
                <%= link_to 'About', "home" %>
              </li>
              <li class="nav-item">
                <%= link_to "sign up", new_user_registration_path %>
              </li>
              <li class="nav-item">
                <%= link_to "login", new_user_session_path %>
              </li>
            <% end %>
        </div>
      </nav>
    </header>
      <%= yield %>
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p class="footer-text">CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
